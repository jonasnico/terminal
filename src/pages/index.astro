---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Grid from "../components/Grid.astro";
import Row from "../components/Row.astro";
import Button from "../components/Button.astro";
import Modal from "../components/Modal.astro";
import ModalMatrixModes from "../components/ModalMatrixModes.astro";
import Terminal from "../components/Terminal.tsx";
import { execa } from "execa";

const base = import.meta.env.BASE_URL;
const { stdout: commitInfo } = await execa("git", [
  "log",
  "-1",
  "--pretty=%s|%cd",
  "--date=short",
]);
const [commitMessage, commitDate] = commitInfo.split("|");
const commitTime = new Date().toLocaleTimeString("en-US", {
  hour: "2-digit",
  minute: "2-digit",
});
---

<Layout title="Terminal by Jonas" description="My personal website">
  <Grid>
    <Row>
      <span style="color: var(--theme-focused-foreground);"
        >Jonas Nicolaysen</span
      >
    </Row>
    <Row>
      <span style="color: var(--theme-text);">yes, that is my name :-)</span>
    </Row>
  </Grid>

  <br />

  <Terminal client:load base={base} />

  <br />

  <Card title="Latest Activity">
    <Grid>
      <Row>
        <span style="color: var(--theme-text);">$ git log -1</span>
      </Row>
      <Row>
        Branch: <span style="color: var(--theme-focused-foreground);">main</span
        >
      </Row>
      <Row>
        Latest commit: <span style="color: var(--theme-text-muted);"
          >"{commitMessage}"</span
        >
      </Row>
      <Row>
        <span style="color: var(--theme-text-muted);"
          >{commitDate} {commitTime}</span
        >
      </Row>
    </Grid>
  </Card>

  <Card title="Matrix">
    <Button id="open-modal-button">Engage</Button>
  </Card>

  <Modal>
    <ModalMatrixModes />
  </Modal>
</Layout>

<script>
  const openModalButton = document.getElementById("open-modal-button");
  const modalBackdrop = document.getElementById("modal-backdrop");

  if (openModalButton && modalBackdrop) {
    openModalButton.addEventListener("click", () => {
      modalBackdrop.classList.add("is-open");
    });

    modalBackdrop.addEventListener("click", (event) => {
      if (event.target === modalBackdrop) {
        modalBackdrop.classList.remove("is-open");
      }
    });

    const closeButton = modalBackdrop.querySelector("button");
    if (closeButton) {
      closeButton.addEventListener("click", () => {
        modalBackdrop.classList.remove("is-open");
      });
    }
  }
</script>

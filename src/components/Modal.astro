<div id="modal-backdrop" class="modal-backdrop">
  <div id="modal-content" class="modal-content">
    <slot />
  </div>
</div>

<style>
  .modal-backdrop {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1000;
    visibility: hidden;
    opacity: 0;
    transition:
      visibility 0s 0.3s,
      opacity 0.3s;
  }

  .modal-backdrop.is-open {
    visibility: visible;
    opacity: 1;
    transition: opacity 0.3s;
  }

  .modal-content {
    max-width: 80vw;
    max-height: 80vh;
    overflow: auto;
  }
</style>

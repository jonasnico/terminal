---
import Card from "./Card.astro";
import MatrixLoader from "./MatrixLoader.tsx";
import Button from "./Button.astro";
---

<div class="modal-matrix-modes">
  <Card title="MATRIX MODES">
    <Card title="KATAKANA DEFAULT">
      <MatrixLoader client:load rows={32} mode="katakana" />
    </Card>
    <Card title="GREEK LTR">
      <MatrixLoader
        client:load
        direction="left-to-right"
        rows={8}
        mode="greek"
      />
    </Card>
    <br />
    <br />
    <Button>Close</Button>
  </Card>
</div>

<style lang="scss">
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(88px);
    }
    to {
      opacity: 1;
      transform: translateY(0px);
    }
  }

  .modal-matrix-modes {
    animation: fadeIn 0.3s ease-out;
    background: var(--theme-background-modal);
    box-shadow: 0 0 0 1ch var(--theme-border-subdued);
    display: block;
    font-weight: 400;
    margin: 0 auto;
    max-width: 64ch;
    padding: calc(var(--font-size) * var(--theme-line-height-base)) 2ch
      calc(var(--font-size) * var(--theme-line-height-base)) 2ch;
    user-select: none;
    width: 100%;
  }
</style>
